datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          Int      @id @default(autoincrement())
    email       String   @unique
    firstName   String   
    lastName    String
    role        Role     @default(USER)
    applications Application[]
    authProvider AuthProvider @default(EMAIL)
    password    String?
}

model Application {
    id              Int      @id @default(autoincrement())
    age             Int
    city            String
    country         String
    diet            String
    educationLevel  String
    ethnicity       String
    gender          String
    github          String
    gradYear        Int
    linkedin        String
    major           String
    phoneNumber     String   @unique
    portfolio       String
    pronouns        String
    school          String
    shirtSize       String
    sleep           Boolean
    state           String
    whyBostonhacks  String
    applicationYear Int
    user            User     @relation(fields: [userId], references: [id])
    userId          Int
}


enum Role {
    USER
    ADMIN
}

enum AuthProvider {
    EMAIL
    FACEBOOK
    GOOGLE
}
