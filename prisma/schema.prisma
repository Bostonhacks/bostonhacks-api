datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          Int      @id @default(autoincrement())
    email       String   @unique
    firstName   String   
    lastName    String
    avatar      String?
    role        Role     @default(USER)
    applications Application[]
    authProvider AuthProvider @default(EMAIL)
    password    String?
}

model Application {
    id              Int      @id @default(autoincrement())
    gender          String
    pronous         String
    age             Int
    ethnicity       String
    gradYear        Int
    phoneNumber     String   @unique
    school          String
    city            String
    state           String
    country         String
    educationLevel  String
    major           String
    diet            String
    shirtSize       String
    sleep           Boolean
    github          String
    linkedin        String
    portfolio       String
    whyBostonhacks  String
    applicationYear Int
    user            User     @relation(fields: [userId], references: [id])
    userId          Int
}


enum Role {
    USER
    ADMIN
}

enum AuthProvider {
    EMAIL
    FACEBOOK
    GOOGLE
}
